<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical"
    tools:context="com.example.csefamily.MainActivity"
    android:id="@+id/dl"
    tools:ignore="ExtraText"
    tools:openDrawer="start">

    <android.support.design.widget.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/cardview_dark_background"
        android:visibility="gone"
        app:headerLayout="@layout/menu_header"
        app:itemTextColor="#ffffff"
        app:menu="@menu/side_menu"
        tools:ignore="MissingConstraints,PrivateResource"
        tools:visibility="gone"></android.support.design.widget.NavigationView>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/main_back"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logo"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DUET CSE Family"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="251dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:id="@+id/hi"
                                    android:layout_height="60dp"
                                    android:src="@drawable/history"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="History"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/hi"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/bh"
                                    android:background="@android:color/transparent"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:id="@+id/ti"
                                    android:layout_height="60dp"
                                    android:src="@drawable/teacher"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Faculty"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/ti"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/bt"
                                    android:background="@android:color/transparent"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:id="@+id/si"
                                    android:layout_height="60dp"
                                    android:src="@drawable/student"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Student"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/si"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/bs"
                                    android:background="@android:color/transparent"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:id="@+id/oi"
                                    android:layout_height="60dp"
                                    android:src="@drawable/officer"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Officer"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/oi"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/bo"
                                    android:background="@android:color/transparent"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:id="@+id/wi"
                                    android:layout_height="60dp"
                                    android:src="@drawable/worker"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Worker"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/wi"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/bw"
                                    android:background="@android:color/transparent"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:id="@+id/syi"
                                    android:layout_height="60dp"
                                    android:src="@drawable/syllabus"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Syllabus"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/syi"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/bsy"
                                    android:background="@android:color/transparent"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:id="@+id/bi"
                                    android:layout_height="60dp"
                                    android:src="@drawable/book"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Books"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/bi"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/link"
                                    android:autoLink="web"
                                    android:id="@+id/bb"
                                    android:background="@android:color/transparent"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:id="@+id/ri"
                                    android:layout_height="60dp"
                                    android:src="@drawable/routine"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Routine"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/ri"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/br"
                                    android:background="@android:color/transparent"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:id="@+id/imgLogin"
                                    android:layout_height="60dp"
                                    android:src="@drawable/login"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Login"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/imgLogin"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/btnlogin"
                                    android:background="@android:color/transparent"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:id="@+id/imgSignUP"
                                    android:layout_height="60dp"
                                    android:src="@drawable/aboutus"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="About us"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/imgSignUP"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/btnAbout"
                                    android:background="@android:color/transparent"
                                    />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <WebView
                    android:id="@+id/webid"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                </WebView>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>




</android.support.v4.widget.DrawerLayout>