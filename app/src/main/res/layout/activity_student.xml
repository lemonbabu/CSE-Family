                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="1st Batch"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:background="#ffffff"
                                android:layout_marginRight="5dp"
                                android:id="@+id/b1"
                                />
